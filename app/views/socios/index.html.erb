

<h1>Listado de Socios</h1>

<div class ="container">
  <div class="pull-right">
    <% link_to "Nueva consulta", new_consultum_path, class:"btn btn-success" %>
  </div>
  <div class="pull-right" style="margin-right: 10px" >
   <%= search_form_for @q, html: { class:"form-inline"} do |f| %>
   <%= f.search_field :sap_cont, placeholder: "Buscar  N° SAP", class: "form-control" %>
   <% end %>
     </div>
     <div class="pull-right" style="margin-right: 10px" >
      <%= search_form_for @q, html: { class:"form-inline"} do |f| %>
      <%= f.search_field :name_cont, placeholder: "Buscar  Nombre Socio", class: "form-control" %>
      <% end %>
        </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @socios.each do |socio| %>
      <tr>
        <td><%= socio.name %></td>
        <td><%= socio.sap %></td>
        <td><%= link_to 'Ver', socio %></td>
        <td><%= link_to 'Actualizar socio', edit_socio_path(socio) %></td>
        <td><% link_to 'Borrar', socio, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Nuevo socio', new_socio_path, class:"btn btn-primary" %>
