
<%= simple_form_for(@compromiso) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tema, as: :radio_buttons, collection: [['Laboral'], ['Personal'],['Beneficio Sindical'] ], value_method: :first %>
    <%= f.input :compromiso %>
      <%= f.input :dirigente, as: :radio_buttons, collection: [['Clodomiro Vasquez'], ['Orlando Diaz'],['Luis Rebolledo'] ], value_method: :first %>
    <%= f.input :estatus, as: :radio_buttons, collection: [['Abierto'], ['Cerrado'],['Pendiente'] ], value_method: :first %>
    <%= f.input :fecha_ingreso %>
    <%= f.input :fecha_tope, as: :radio_buttons, collection: [['1 semana'], ['2 semanas'],['3 semanas'] ], value_method: :first %>
    <%= f.input :respuesta %>
    <%= f.association :socio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Crear RecepciÃ³n", class: "btn btn-primary" %>
  </div>
<% end %>
