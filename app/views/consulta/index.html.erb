<p id="notice"><%= notice %></p>

<h1>Consulta</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tema</th>
      <th>Dirigente</th>
      <th>Fecha</th>
      <th>Descripción</th>
      <th>Socio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consulta.each do |consultum| %>
      <tr>
        <td><%= consultum.tema %></td>
        <td><%= consultum.diregente %></td>
        <td><%= consultum.fecha %></td>
        <td><%= consultum.descripción %></td>
        <td><%= consultum.name %></td>
        <td><%= link_to 'Ver', consultum %></td>
        <td><%= link_to 'Editar', edit_consultum_path(consultum) %></td>
        <td><%= link_to 'Borrar', consultum, method: :delete, data: { confirm: 'Estás seguro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Nueva Consulta', new_consultum_path, class:"btn btn-success" %>
