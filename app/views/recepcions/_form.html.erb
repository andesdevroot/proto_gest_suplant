
<%= simple_form_for(@recepcion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :tema, as: :radio_buttons, collection: [['0', 'Laboral'], ['1', 'Personal'],['3', 'Beneficio Sindical'] ], label_method: :second, value_method: :first %>
    <%= f.input :dirigente, as: :radio_buttons, collection: [['0', 'Laboral'], ['1', 'Personal'],['3', 'Beneficio Sindical'] ], label_method: :second, value_method: :first %> 
    <%= f.input :fecha %>
    <%= f.input :consulta %>
    <%= f.association :socio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
